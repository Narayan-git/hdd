update no_of _tests in test table
update test set No_tests =(SELECT count(*) from test_reference where test_id=601)
    WHERE test_id=601

//For Profile table in HDD
create table profile(
    PID int auto_increment primary key,
    name varchar(100),
    age int(3),
    gender ENUM('M','F','O'),
    mob bigint(10),
    city varchar(50)
);

//For Test_result table
create table test_result(
    tr_id int primary key,
    test_id int,
    sub_test_id int,
    sub_Symptom_Name varchar(100),
    value float,
    status ENUM(0,1),
    FOREIGN key(sub_test_id) REFERENCES test_reference(ref_id),
    FOREIGN key(test_id) REFERENCES test(test_id)
);

//For Transaction table
create table transaction(
    pid int,
    test_id int,
    date current_time_stamp,
    tr_id int
)
//For Transaction table
CREATE TABLE `transaction` (
    `pid` INT NOT NULL ,
    `test_id` INT NOT NULL ,
    `date` DATE NOT NULL DEFAULT CURRENT_TIMESTAMP ,
    `tr_id` INT NOT NULL 
    );

//Query1 used in pendingTest.php page
select * from transaction where date= CURRENT_DATE() or status = 0;

//hdduser table 
create TABLE hdduser(
    uid int auto_increment  primary key,
    u_type int(1),
    f_name varchar(40),
    l_name varchar(30),
    gender char(1),
    dob date,
    mobile bigint,
    email varchar(100),
    address varchar(150)
);
//Login table
create table login(
    slno int auto_increment primary key,
    uid int,
    u_type,
    date datetime NOT NULL DEFAULT CURRENT_TIMESTAMP,
);

//For Disease table 
create table disease(
    d_id int auto_increment primary key,
    disease_name varchar(100)
)

//for Symptoms
create table symptom(
    s_id int auto_increment primary key,
    symptom_name varchar(150)
)
//to change starting of auto increment key
alter table symptom auto_increment = 111;

WHERE datetimecol >= DATE(NOW()) + INTERVAL -7 DAY
   AND datetimecol <  DATE(NOW()) + INTERVAL  0 DAY


SELECT
 date,
 COUNT(tr_id ) AS no_of_rows 
FROM transaction
WHERE date >= DATE(NOW()) + INTERVAL -5 DAY
   AND date <  DATE(NOW()) + INTERVAL  0 DAY
   GROUP BY date  
ORDER BY date; 

///for update test count 
update test t set t.No_tests= (select count(*) from test_reference where test_id= $T_Id) where test_id= $T_Id

